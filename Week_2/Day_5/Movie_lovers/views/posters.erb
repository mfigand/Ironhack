<!-- views/search.erb -->

<html>
<head>
  <title>| MOVIE SEARCH |</title>
  <link rel="stylesheet" type="text/css" href="style.css">
</head>
<body class="posters">
  <h1 class="title">Movie Quiz</h1>

  <h2 class="subTitle">Which movie was released in <%= @year %>?</h2>


<% @nineMovieArray.each_with_index do |movie, index| %>

  <form action="/answer" method="POST">
    <div class= "boxes">
      <img src="<%= movie.poster %>"><br>
      <button type="submit" name="btn" value="select">Choose</button>
    </div>
        <input type="hidden" name="choosenYear" value="<%= movie.year %>">
        <input type="hidden" name="correctYear" value="<%= @year %>">
  </form>

<% end %>
  

</body>
</html>
