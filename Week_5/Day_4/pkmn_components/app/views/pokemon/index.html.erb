<h1>Pok√©dex</h1>

<!-- List of pokemon -->
<ul class="pokedex-list">
  <% @pokemon.each do |pkmn| %>
    <li>
      <button class="js-show-pokemon btn btn-link"
          data-pokemon-uri="<%= pkmn["resource_uri"] %>">
        <%= pkmn["name"] %>
      </button>
    </li>
  <% end %>
</ul>


<!-- Pokemon modal view (hidden at first) -->
<div class="modal fade js-pokemon-modal">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>

        <h3 class="modal-title">
          <span class="js-pkmn-name">Feraligtr</span>
          <small class="js-pkmn-number">#160</small>
        </h3>
      </div><!-- .modal-header -->

      <div class="modal-body">
        <dl class="dl-horizontal">
          <div class="row">
            
            <img class="js-pokemon-image" src="" style="width: 50%, margin: 0 auto" />

            <div class="col-md-6 texArea">
              <dt>Height</dt>
              <dd class="js-pkmn-height">23</dd>
              <dt>Weight</dt>
              <dd class="js-pkmn-weight">888</dd>
              <dt>Hit Points</dt>
              <dd class="js-pkmn-hp">888</dd>
              <dt>Attack</dt>
              <dd class="js-pkmn-attack">888</dd>
              <dt>Defense</dt>
              <dd class="js-pkmn-defense">888</dd>
              <dt>Special Attack</dt>
              <dd class="js-pkmn-sp_atk">888</dd>
              <dt>Special Defense</dt>
              <dd class="js-pkmn-sp_def">888</dd>
              <dt>Speed</dt>
              <dd class="js-pkmn-speed">888</dd>
              <dt>Types</dt>
              <dd class="js-pkmn-types"></dd>
            </div>
          </div>




        </dl>
        <div class="modal-footer">
        </div>
      </div><!-- .modal-body -->

    </div><!-- .modal-content -->
  </div><!-- .modal-dialog -->
</div><!-- .modal -->
